def format_job_progress(
    job_id: str, 
    downloaded: int,
    uploaded: int,
    failed: int,
    total: int,
    duration: Optional[float] = None,
    error: Optional[str] = None,
    post_info: Optional[Dict[str, Any]] = None,
    is_complete: Optional[bool] = None,
    status_override: Optional[str] = None
) -> str:
    """Format job progress message"""
    if is_complete is None:
        is_complete = uploaded + failed == total
    all_failed = failed == total and is_complete

    # Format duration
    duration_str = ""
    if duration:
        if duration < 60:
            duration_str = f"{duration:.2f} seconds"
        else:
            minutes = int(duration // 60)
            seconds = duration % 60
            duration_str = f"{minutes} minute{'s' if minutes != 1 else ''} and {seconds:.2f} seconds"

    # Calculate progress percentage
    progress_pct = (uploaded / total * 100) if total > 0 else 0
    pending = total - (uploaded + failed)
    
    # Determine status message
    if status_override:
        status = status_override
    elif error:
        status = "âŒ Process Failed"
    elif all_failed:
        status = "âŒ All Files Failed"
    elif not downloaded:
        status = "â¬ Download Starting"
    elif downloaded < total:
        status = "â¬ Downloading in Progress"
    elif is_complete and failed > 0:
        if failed > total / 2:
            status = "â€¼ï¸ Mostly Failed"
        else:
            status = "â‰ï¸ Partial Success"
    elif is_complete:
        status = "âœ… All Files Processed"
    elif uploaded > 0:
        status = "â¬ Upload in Progress"
    else:
        status = "â™»ï¸ Initializing"

    # Format the message header
    msg = f"""
ï¿½ {'UPLOAD COMPLETE' if is_complete else 'STATUS UPDATE'} - Job {job_id}

ğŸ“¥ Download Status: {downloaded}/{total} files ready
â±ï¸ Running for: {duration_str if duration else 'just started'}
âœ… Progress: {progress_pct:.1f}% complete
ğŸ“¤ Uploaded: {uploaded}/{total} files
{'âŒ Failed: ' + str(failed) if failed > 0 else ''}
{'â³ Pending: ' + str(pending) if pending > 0 else ''}

    # Add post metadata if available
    if post_info:
        msg += f"""

------------------------------------------------------------
ğŸ‘¤ From: @{post_info.get('author', 'unknown')}
â¤ï¸ Likes: {post_info.get('likes', 0):,}
ğŸ“… Posted: {post_info.get('post_date', '')}
ğŸ“ Caption: {post_info.get('caption', '')[:50]}..."""

    # Add status and duration
    msg += f"""
------------------------------------------------------------
âš¡ Status: {status}"""

    if duration:
        msg += f"\nâ±ï¸ Duration: {format_duration(duration)}"

    # Add error or completion message
    if error:
        msg += f"\n\nâŒ Error: {error}"
    elif is_complete and not all_failed:
        msg += "\n\nğŸ‰ All files processed!"

    return msg

